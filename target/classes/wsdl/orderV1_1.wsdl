<wsdl:definitions name="orderV11.wsdl"
	targetNamespace="http://bpel.innoq.com/order/v1/sv1" xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
	xmlns:tns="http://bpel.innoq.com/order/v1/sv1" xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:http="http://schemas.xmlsoap.org/wsdl/http/" xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/">


	<!-- Type definitions for input- and output parameters for webservice -->
	<wsdl:types>
		<xs:schema targetNamespace="http://bpel.innoq.com/order/v1/sv1">
			<xs:element name="address">
				<xs:complexType>
					<xs:sequence>
						<xs:element type="xs:string" name="street" />
						<xs:element type="xs:string" name="postalCode" />
						<xs:element type="xs:string" name="city" />
					</xs:sequence>
				</xs:complexType>
			</xs:element>

			<xs:element name="orderInformation">
				<xs:complexType>
					<xs:sequence>
						<xs:element type="xs:string" name="partName" />
						<xs:element type="xs:int" name="amount" />
						<xs:element type="xs:string" name="customerName" />
						<xs:element ref="tns:address" />
					</xs:sequence>
				</xs:complexType>
			</xs:element>
			<xs:element name="orderConfirmation">
				<xs:complexType>
					<xs:sequence>
						<xs:element type="xs:string" name="resultCode" />
						<xs:element type="xs:int" name="orderiD" />
					</xs:sequence>
				</xs:complexType>
			</xs:element>

		</xs:schema>
	</wsdl:types>

	<!-- Message definitions for input and output -->
	<wsdl:message name="purchaseOrder">
		<wsdl:part name="parameters" element="tns:orderInformation" />
	</wsdl:message>
	<wsdl:message name="orderResult">
		<wsdl:part name="resultCode" element="tns:orderConfirmation" />
	</wsdl:message>

	<!-- Port (interface) definitions -->
	<wsdl:portType name="OrderEndpoint">
		<wsdl:operation name="order">
			<wsdl:input message="tns:purchaseOrder" />
			<wsdl:output message="tns:orderResult" />
		</wsdl:operation>
	</wsdl:portType>


	<!-- Port bindings to transports and encoding - HTTP, document literal encoding 
		is used -->
	<wsdl:binding name="OrderBinding" type="tns:OrderEndpoint">
		<soap:binding transport="http://schemas.xmlsoap.org/soap/http" />
		<wsdl:operation name="order">
			<soap:operation soapAction="http://bpel.innoq.com/Order"
				style="document" />
			<wsdl:input>
				<soap:body use="literal" />
			</wsdl:input>
			<wsdl:output>
				<soap:body use="literal" />
			</wsdl:output>
		</wsdl:operation>
	</wsdl:binding>

	<!-- Service definition -->
	<wsdl:service name="OrderEndpointService">
		<wsdl:port name="OrderService" binding="tns:OrderBinding">
			<soap:address location="http://localhost/order" />
		</wsdl:port>
	</wsdl:service>

</wsdl:definitions>
